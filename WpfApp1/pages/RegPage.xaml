<Page x:Class="WpfApp1.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация">

    <Grid Width="300"
          VerticalAlignment="Center"
          HorizontalAlignment="Center">

        <StackPanel>

            <TextBlock Text="ФИО"/>
            <TextBox x:Name="TbFIO"
             ToolTip="Введите ФИО полностью"/>

            <TextBlock Text="Логин"/>
            <TextBox x:Name="TbLogin"
             ToolTip="Введите логин"
             PreviewTextInput="TbLogin_PreviewTextInput"/>

            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="PbPassword"
                 ToolTip="Введите пароль"/>

            <TextBlock Text="Повторите пароль"/>
            <PasswordBox x:Name="PbPassword2"
                 ToolTip="Повторите пароль"/>

            <Button Content="Зарегистрироваться"
            Click="BtnReg_Click"/>

            <Button Content="Назад"
            Click="BtnBack_Click"/>

        </StackPanel>

    </Grid>
</Page>
