<Page x:Class="WpfApp1.Pages.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Добавление / редактирование пользователя">

    <Grid Width="350"
          VerticalAlignment="Center"
          HorizontalAlignment="Center">

        <StackPanel Margin="10">

            <TextBlock Text="ФИО"/>
            <TextBox x:Name="TbFIO"
             ToolTip="Введите ФИО пользователя"/>

            <TextBlock Text="Логин"/>
            <TextBox x:Name="TbLogin"/>

            <TextBlock Text="Роль"/>
            <ComboBox x:Name="CbRole">
                <ComboBoxItem Content="Администратор"/>
                <ComboBoxItem Content="Пользователь"/>
            </ComboBox>

            <Image x:Name="ImgPhoto"
           Height="120"
           Margin="0 10"
           Stretch="Uniform"/>

            <Button Content="Выбрать фото"
            Click="BtnSelectPhoto_Click"/>

            <TextBlock Text="Новый пароль (необязательно)"/>
            <PasswordBox x:Name="PbPassword"/>

            <Button Content="Сохранить"
            Click="BtnSave_Click"/>

            <Button Content="Назад"
            Click="BtnBack_Click"/>

        </StackPanel>
        
    </Grid>
</Page>
