<Page x:Class="WpfApp1.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Авторизация">

    <Grid Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel>

            <TextBlock Text="Логин:"/>
            <TextBox x:Name="TbLogin" ToolTip="Введите логин"/>

            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PbPassword" ToolTip="Введите пароль"/>

            <Button Content="Войти" Click="BtnLogin_Click"/>
            <Button Content="Регистрация" Click="BtnReg_Click"/>

        </StackPanel>
    </Grid>
</Page>
